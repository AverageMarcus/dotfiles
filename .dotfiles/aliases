#Â Aliases
alias grep='grep --color=auto'
alias watch='watch '
alias cat=' bat '
alias curl='curlie'
alias tmp='cd $(mktemp -d)'
alias ls=' exa --group-directories-first --icons --header --git --ignore-glob=.git'
lt() {
  DEPTH=$(echo $1 | grep "^[0-9]*$")
  if [ "$DEPTH" = "" ]; then
    DEPTH=2
  else
    shift
  fi
  ls -l --tree -L $DEPTH -I ".git|cache|log|logs|node_modules|vendor" $@
}
